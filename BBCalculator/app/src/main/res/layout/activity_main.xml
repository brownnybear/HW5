<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCCCC"
    android:padding="0dp"
    tools:context="com.rattanaporn.bbcalculator.MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="fill_parent"
        android:layout_height="190dp"
        android:layout_margin="0dp"
        android:background="#FFFFF0"
        android:gravity="bottom|right"
        android:maxLength="17"
        android:maxLines="2"
        android:nestedScrollingEnabled="false"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="70sp" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="90dp"
        android:layout_height="81dp"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:background="@color/colorAccent"
        android:maxWidth="90dp"
        android:onClick="onClickNumber"
        android:text="7"
        android:textColor="#708090"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="90dp"
        android:layout_height="81dp"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/btn7"
        android:layout_toRightOf="@+id/btn7"
        android:background="@color/colorAccent"
        android:maxWidth="90dp"
        android:onClick="onClickNumber"
        android:text="8"
        android:textColor="#708090"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="90dp"
        android:layout_height="81dp"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/btn8"
        android:layout_toRightOf="@+id/btn8"
        android:background="@color/colorAccent"
        android:maxWidth="90dp"
        android:onClick="onClickNumber"
        android:text="9"
        android:textColor="#708090"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="90dp"
        android:layout_height="81dp"
        android:layout_below="@+id/btn7"
        android:layout_toLeftOf="@+id/btn5"
        android:layout_toStartOf="@+id/btn5"
        android:background="@color/colorAccent"
        android:onClick="onClickNumber"
        android:text="4"
        android:textColor="#708090"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="90dp"
        android:layout_height="81dp"
        android:layout_below="@+id/btn8"
        android:layout_toEndOf="@+id/btn7"
        android:layout_toRightOf="@+id/btn7"
        android:background="@color/colorAccent"
        android:onClick="onClickNumber"
        android:text="5"
        android:textColor="#708090"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="90dp"
        android:layout_height="81dp"
        android:layout_below="@+id/btn9"
        android:layout_toEndOf="@+id/btn5"
        android:layout_toRightOf="@+id/btn5"
        android:background="@color/colorAccent"
        android:onClick="onClickNumber"
        android:text="6"
        android:textColor="#708090"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="90dp"
        android:layout_height="81dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn4"
        android:background="@color/colorAccent"
        android:onClick="onClickNumber"
        android:text="1"
        android:textColor="#708090"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="90dp"
        android:layout_height="81dp"
        android:layout_alignTop="@+id/btn1"
        android:layout_toEndOf="@+id/btn1"
        android:layout_toRightOf="@+id/btn1"
        android:background="@color/colorAccent"
        android:onClick="onClickNumber"
        android:text="2"
        android:textColor="#708090"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="90dp"
        android:layout_height="81dp"
        android:layout_below="@+id/btn6"
        android:layout_toEndOf="@+id/btn5"
        android:layout_toRightOf="@+id/btn5"
        android:background="@color/colorAccent"
        android:onClick="onClickNumber"
        android:text="3"
        android:textColor="#708090"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="90dp"
        android:layout_height="81dp"
        android:layout_alignLeft="@+id/btn1"
        android:layout_alignStart="@+id/btn1"
        android:layout_below="@+id/btn1"
        android:background="#FFDAB9"
        android:onClick="onClickClear"
        android:text="C"
        android:textColor="#708090"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="90dp"
        android:layout_height="81dp"
        android:layout_below="@+id/btn2"
        android:layout_toEndOf="@+id/btn1"
        android:layout_toRightOf="@+id/btn1"
        android:background="@color/colorAccent"
        android:onClick="onClickNumber"
        android:text="0"
        android:textColor="#708090"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnEqual"
        android:layout_width="90dp"
        android:layout_height="81dp"
        android:layout_below="@+id/btn3"
        android:layout_toEndOf="@+id/btn0"
        android:layout_toRightOf="@+id/btn0"
        android:background="#D8BFD8"
        android:onClick="onClickEqual"
        android:text="="
        android:textColor="#708090"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="90dp"
        android:layout_height="81dp"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/btn9"
        android:layout_toRightOf="@+id/btn9"
        android:background="#F0FFFF"
        android:maxWidth="90dp"
        android:onClick="onClickOperator"
        android:text="+"
        android:textColor="#708090"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="90dp"
        android:layout_height="81dp"
        android:layout_below="@+id/btnPlus"
        android:layout_toRightOf="@+id/btn9"
        android:background="#F0FFFF"
        android:onClick="onClickOperator"
        android:text="-"
        android:textColor="#708090"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnMult"
        android:layout_width="90dp"
        android:layout_height="81dp"
        android:layout_below="@+id/btnMinus"
        android:layout_toRightOf="@+id/btn9"
        android:background="#F0FFFF"
        android:onClick="onClickOperator"
        android:text="x"
        android:textColor="#708090"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="90dp"
        android:layout_height="81dp"
        android:layout_below="@+id/btnMult"
        android:layout_toRightOf="@+id/btn9"
        android:background="#F0FFFF"
        android:onClick="onClickOperator"
        android:text="รท"
        android:textColor="#708090"
        android:textSize="30sp" />


</RelativeLayout>
